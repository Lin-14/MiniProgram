<!--pages/index/index.wxml-->
<view>
  <swiper indicator-dots="true" interval="3000" autoplay="true">
    <swiper-item><image src="/images/post/1.jpg"></image></swiper-item>
    <swiper-item><image src="/images/post/2.jpg"></image></swiper-item>
    <swiper-item><image src="/images/post/3.jpg"></image></swiper-item>
  </swiper>

<block wx:for="{{post_content}}" wx:for-item="item">
  <view class="post-container">
    <view class="post">
      <image class="post-author" src="{{item.author_img}}"></image>
      <text class="post-date">{{item.date}}</text>
    </view>
    <text class="post-title">{{item.title}}</text>
    <image class="post-img" src="{{item.post_img}}"></image>
    <text class="post-content">{{item.content}}</text>
    <view class="post-like">
      <image class="post-icon" src="/images/icon/chat.png"></image>
      <text class="post-like-num">{{item.collect_num}}</text>
      <image class="post-icon" src="/images/icon/view.png"></image>
      <text class="post-like-num">{{item.view_num}}</text>
    </view>
  </view>
</block>

</view>
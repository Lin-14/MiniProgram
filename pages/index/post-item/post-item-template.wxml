<template name="postItem">
  <view class="post-container">
    <view class="post">
      <image class="post-author" src="{{avatar}}"></image>
      <text class="post-date">{{date}}</text>
    </view>
    <text class="post-title">{{title}}</text>
    <image class="post-img" src="{{post_img}}"></image>
    <text class="post-content">{{content}}</text>
    <view class="post-like">
      <image class="post-icon" src="/images/icon/chat.png"></image>
      <text class="post-like-num">{{collection}}</text>
      <image class="post-icon" src="/images/icon/view.png"></image>
      <text class="post-like-num">{{read}}</text>
    </view>
  </view>
</template>
/* pages/index/index.wxss */
page{
  height: 100%;
  background-color:#c3c3c3;
}
swiper{
  width:100%;
  height:470rpx;
}
swiper image{
  width:100%;
  height:470rpx;
}
.post-container{
  display: flex;
  flex-direction: column;
  margin-top:20rpx;
  margin-bottom:40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
  padding-bottom: 10rpx;
}
.post{
  margin: 10rpx 0 20rpx 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.post-author{
  height: 60rpx;
  width: 60rpx;
}
.post-date{
  margin-left: 20rpx;
  font-size: 26rpx;
}
.post-img{
  width: 100%;
  height: 450rpx;
  margin-bottom: 28rpx;
}
.post-title{
  font-size:34rpx;
  font-weight:600;
  margin-bottom:10px;
  margin-left:10px;
  color:#333;
}
.post-content{
  font-size: 28rpx;
  color: #666;
  letter-spacing: 2rpx;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
}
.post-like{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 26rpx;
  margin-left: 20rpx;
}
.post-icon{
  height: 32rpx;
  width: 32rpx;
  margin-right: 16rpx;
}
.post-like-num{
  margin-right: 40rpx;
}
